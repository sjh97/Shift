<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/settingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_3x"
            android:fontFamily="@font/cafe24dongdong"
            android:text="구글이 정해주는 색깔~"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <RelativeLayout
            android:id="@+id/colorPickerGridLayoutWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <GridLayout
                android:id="@+id/colorPickerGridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor1" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor2" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor3" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor4" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor5" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor6" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor7" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor8" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor9" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor10" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/googleCalendarColor11" />


            </GridLayout>

            <ImageView
                android:id="@+id/colorPickerGridLayout_preimageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/colorPickerGridLayout"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/googleCalendarColor1" />

            <TextView
                android:id="@+id/colorPickerGridLayout_preTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colorPickerGridLayout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/colorPickerGridLayout_preimageView"
                android:fontFamily="@font/cafe24dongdong"
                android:text="# 7986cb"
                android:textSize="20dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/colorPickerOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorPickerGridLayoutWrapper"
            android:layout_toLeftOf="@+id/colorPickerCanceal"
            android:layout_margin="10dp"
            android:text="확인" />

        <TextView
            android:id="@+id/colorPickerCanceal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorPickerGridLayoutWrapper"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="취소"/>

    </RelativeLayout>
</ScrollView>