<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/day_text_padding"
        android:background= "@color/default_calendar_background_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/space_2x"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/default_day_text_color"
                android:textSize="@dimen/day_text_size"
                tools:text="10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_text"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="2dp"
                android:layout_gravity="center"
                android:textColor="@color/default_calendar_background_color"
                />
            <ListView
                android:layout_marginTop="2dp"
                android:id="@+id/listview_day_list"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
